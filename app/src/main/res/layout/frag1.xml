<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#395">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_of_game"
            android:hint="name of game"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:text="Select no. of players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Select_players_txtview"
            android:layout_marginTop="27dp"
            android:layout_below="@id/name_of_game"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Player"
            android:id="@+id/no_of_player_txt"
            android:layout_below="@id/Select_players_txtview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/arrow_up_float"
            android:id="@+id/up_btn"
            android:layout_alignBaseline="@id/no_of_player_txt"
            android:layout_alignBottom="@id/no_of_player_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/arrow_down_float"
            android:id="@+id/down_btn"
            android:layout_alignBaseline="@id/no_of_player_txt"
            android:layout_alignBottom="@id/no_of_player_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:text="SELECT YOUR GUN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Select_gun_txtview"
            android:layout_marginTop="10dp"
            android:layout_below="@id/down_btn"
            />

        <TextView
            android:text="SELECT GAME MODE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Select_mode_txtview"
            android:layout_alignBaseline="@id/Select_gun_txtview"
            android:layout_alignBottom="@id/Select_gun_txtview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp" />




        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_below="@id/Select_gun_txtview"
            android:id="@+id/rdgroup1">

            <RadioButton

                android:text="AK47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/rd1_gun"

                />

            <RadioButton
                android:text="Shotgun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd2_gun"
                ></RadioButton>

            <RadioButton
                android:text="Sniper rifles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd3_gun"
                />


        </RadioGroup>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdgroup2"
            android:layout_below="@id/Select_mode_txtview"
            android:layout_alignBottom="@id/rdgroup1"
            android:layout_alignRight="@id/Select_mode_txtview"
            android:layout_alignEnd="@id/Select_mode_txtview">
            <RadioButton
                android:text="Marina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd1_mode" />

            <RadioButton
                android:text="Train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd3_mode" />

            <RadioButton
                android:text="Shopping Center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd2_mode" />
        </RadioGroup>

    <Button
        android:text="Submit your choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gamechoice_submitbtn"
        android:layout_below="@id/rdgroup1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />


</RelativeLayout>

